<h1>Edit Post</h1>
<form method="POST" action="/discussion/<%=discussion.id%>/?_method=PUT">
    <div class="form-group">
      <label for="name">Title:</label>
      <%=discussion.title%>
    </div>

    <div class="form-group">
      <label for="content">Edit Post:</label>
    <textarea type="text" class="form-control" id="content" name="content" required>
        <%=discussion.content%>

    </textarea>
    </div>
    <input type="hidden" id="discussionId"  name="id" value="<%=discussion.id%>">
    <input type="submit" class="btn btn-primary" value="Edit">

  </form>